{
  "appId": "YourAppID",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "electron/dist",
    "renderer/dist"
  ],
  "mac": {
    "artifactName": "${productName}-${version}.${ext}",
    "target": [
      "dmg"
    ]
  },
  "win": {
    "artifactName": "${productName}-${version}.${ext}",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}
